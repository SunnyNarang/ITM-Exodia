<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_attendance"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ExodiaSolutions.sunnynarang.itmexodia.teachers.EditAttendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Present All"
            android:textColor="#fff"
            android:onClick="select"
            android:layout_margin="5dp"
            android:background="@drawable/newimage_r"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:onClick="deselect"
            android:text="Absent All"
            android:layout_margin="5dp"
            android:background="@drawable/newimage_r"
            android:layout_height="wrap_content"
            />



</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/edit_listview"

        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:fontFamily="sans-serif"
        android:elevation="2dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/newimage_r"
        android:onClick="ok_list"
        />
</LinearLayout>
