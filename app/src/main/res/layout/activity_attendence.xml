<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attendence"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.ExodiaSolutions.sunnynarang.itmexodia.students.Attendence">

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:elevation="12dp"
     android:padding="5dp"
     android:background="#E64A19"
     android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:id="@+id/days_to_go"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:text="0"
       android:textColor="#ffffff"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#fff"
       android:text=" more days for 75% Attendance"

       />
  </LinearLayout>

 </LinearLayout>

 <ListView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:id="@+id/wave_lv"
     android:clickable="false"
     android:focusable="false"
     android:focusableInTouchMode="false"
     android:listSelector="@android:color/transparent"
     android:dividerHeight="0dp"
     android:divider="@null">
 </ListView>


</LinearLayout>
