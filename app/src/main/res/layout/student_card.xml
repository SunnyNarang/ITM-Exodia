<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/round_bk"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImage"
        android:layout_width="300dp"
        fresco:fadeDuration="600"
        android:padding="20dp"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="#fff"
        android:layout_height="300dp"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/user_wh"
        android:layout_gravity="center_horizontal"
        />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sunny Narang"
    android:textSize="22sp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/student_name"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0905cs151023"
        android:textSize="22sp"
        android:textColor="@color/status"
        android:layout_gravity="center_horizontal"
        android:id="@+id/student_roll"
        />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>